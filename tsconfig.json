{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./", // Root directory of input files
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["langGraph/**/*", "next-env.d.ts", "*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
